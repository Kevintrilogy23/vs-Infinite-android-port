<?xml version="1.0" encoding="utf-8"?>
<project>
    <!-- Informações básicas -->
    <meta title="FNF infinito" package="com.Kevin.FNFinfinito" version="1.0.0" company="Kevin" />
    <app main="Main" file="FNF infinito" path="export" />

    <!-- Código-fonte -->
    <source path="source" />

    <!-- Configuração de janelas -->
    <window width="1280" height="720" fps="60" background="#000000" hardware="true" />
    <window if="html5" orientation="landscape" resizable="false" />
    <window if="android" orientation="landscape" resizable="false" fullscreen="true" />

    <!-- Ativos do jogo -->
    <assets path="assets" rename="assets" />
    <assets path="mods" rename="mods" if="desktop||android" />

    <!-- Bibliotecas necessárias -->
    <haxelib name="lime" />
    <haxelib name="openfl" />
    <haxelib name="flixel" />
    <haxelib name="flixel-addons" />
    <haxelib name="flixel-ui" />
    <haxelib name="hxcpp" />
    <haxelib name="tjson" />
    <haxelib name="hxjsonast" />

    <!-- Target Android -->
    <target name="android" />

    <!-- Configurações extras de compilação -->
    <define name="HXCPP_FLOAT32" />
    <define name="HXCPP_CHECK_POINTER" />
    <define name="HXCPP_STACK_LINE" />

</project>
